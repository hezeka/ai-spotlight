{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../dist",
    "distDir": "../dist"
  },
  "package": {
    "productName": "AI Spotlight",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "minimize": true,
        "unminimize": true,
        "maximize": true,
        "unmaximize": true,
        "startDragging": true,
        "setFocus": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setPosition": true,
        "center": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.spotlight.ai",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "AI Spotlight",
        "width": 660,
        "height": 200,
        "minWidth": 660,
        "minHeight": 200,
        "maxWidth": 660,
        "maxHeight": 900,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "visible": false,
        "focus": true,
        "fileDropEnabled": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "AI Spotlight"
    }
  }
}